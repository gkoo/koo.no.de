      //h1#mainTitle= title

      sections = [{ anchor: 'about', name: 'About' }, { anchor: 'blog', name: 'Blog' }, { anchor: 'projects', name: 'Projects' }, { anchor: 'misc', name: 'Misc' }]
      showHome = (typeof page !== 'undefined' && page === 'home')
      navClass = showHome ? '' : 'faded'
      ul#sectionBtnWrapper(class=navClass)
        each section in sections
          include includes/sectionBtn

      contentClass = showHome ? '' : 'show'
      #content(class=contentClass)
        a.homeBtn(href="/") Home
        each section in sections
          include includes/section
